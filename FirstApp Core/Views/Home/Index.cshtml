@model List<FirstApp_Core.Models.student>
@{
    ViewData["Title"] = "Home Page";
}

<table class="table table-bordered table-hover alert-dark">
    <tr>
        <th>StudentId</th>
        <th>StudentName</th>
        <th>StudentRollNo</th>
        <th>StudentCity</th>
        <th>StudentClass</th>
        <th>Delete</th>
        <th>Edit</th>
    </tr>
 @foreach (var item in Model)
 {
<tr>
    <th>@item.StudentId</th>
    <td>@item.StudentName</td>
    <td>@item.StudentRollNo</td>
    <td>@item.StudentCity</td>
    <td>@item.StudentClass</td>
    <td><a class="btn btn-danger" asp-action="delete" asp-controller="Home" asp-route-id="@item.StudentId">Delete</a></td>
    <td><a class="btn btn-info" asp-action="edit" asp-controller="Home" asp-route-id="@item.StudentId">Edit</a></td>
</tr>
 }
</table>

<a href="Home/Add">Add</a>
