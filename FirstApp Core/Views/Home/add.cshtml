@model FirstApp_Core.Models.student
@{
    ViewData["Title"] = "add";
}

<h1>add</h1>
<form asp-action="add" asp-controller="Home" method="post">

    <input type="hidden" asp-for="StudentId" />
    <div class="form-group">
        <label>StudetName</label>
        <input type="text" asp-for="StudentName" class="form-control " placeholder="Name" required="required" />
    </div>

    <div class="form-group">
        <label>StudentRollNo</label>
        <input type="text" asp-for="StudentRollNo" class="form-control " placeholder="RollNo" required="required" />
    </div>
    <div class="form-group">
        <div class="form-group">
            <label>StudentCity</label>
            <input type="text" asp-for="StudentCity" class="form-control " placeholder="City" required="required" />
        </div>
        <label>StudentClass</label>
        <input type="text" asp-for="StudentClass" class="form-control " placeholder="Class" required="required" />
    </div>

    <button type="submit" class="btn btn-primary">AddStudent</button>
    <button type="reset">Reset</button>
</form>
